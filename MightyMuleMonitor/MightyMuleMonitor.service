[Unit]
Description=Driveway alerts from Arduino connected on a serial port to modified Mighty Mule Driveway Alarm

[Service]
ExecStart=/opt/Projects/MightyMuleMonitor/MightyMuleMonitor.py

[Install]
WantedBy=multi-user.target

#
# this is installed in /lib/systemd/system
# then run 
#    'sudo systemctl enable MightyMuleMonitor'
# this makes the service start at boot time
# then run 
#    'sudo systemctl start MightyMuleMonitor'
# this starts the service now
